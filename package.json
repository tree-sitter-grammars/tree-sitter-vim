{
  "name": "tree-sitter-vim",
  "version": "0.6.0",
  "description": "Vimscript grammar for tree-sitter",
  "repository": "https://github.com/tree-sitter-grammars/tree-sitter-vim",
  "license": "MIT",
  "author": {
    "name": "Thomas Vigouroux",
    "email": "tomvig38@gmail.com"
  },
  "main": "bindings/node",
  "types": "bindings/node",
  "keywords": [
    "incremental",
    "parsing",
    "tree-sitter",
    "vim"
  ],
  "files": [
    "grammar.js",
    "tree-sitter.json",
    "binding.gyp",
    "prebuilds/**",
    "bindings/node/*",
    "queries/*",
    "src/**",
    "*.wasm"
  ],
  "dependencies": {
    "node-addon-api": "^8.3.1",
    "node-gyp-build": "^4.8.4"
  },
  "devDependencies": {
    "prebuildify": "^6.0.1",
    "prettier": "^3.5.3",
    "tree-sitter-cli": "^0.25.4"
  },
  "peerDependencies": {
    "tree-sitter": "^0.22.4"
  },
  "peerDependenciesMeta": {
    "tree-sitter": {
      "optional": true
    }
  },
  "scripts": {
    "install": "node-gyp-build",
    "prestart": "tree-sitter build --wasm",
    "start": "tree-sitter playground",
    "test": "node --test bindings/node/*_test.js",
    "lint": "prettier --check grammar.js keywords.js rules/*.js",
    "format": "prettier --write grammar.js keywords.js rules/*.js"
  }
}
